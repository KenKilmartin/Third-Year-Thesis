<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33000000"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Add Question"
            android:textColor="#fff"
            android:fontFamily="@font/cuprum"
            android:textAppearance="@style/cuprum_reg"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0sp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/cuprumbold"
                android:textAppearance="@style/cuprum_bold"
                android:background="@drawable/forum_buttons"
                android:text="Add"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:id="@+id/dialog_question_add"
                android:layout_margin="5sp"
                />

            <TextView
                android:layout_width="0sp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/cuprumbold"
                android:textAppearance="@style/cuprum_bold"
                android:background="@drawable/forum_buttons"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:id="@+id/dialog_question_cancel"
                android:layout_margin="5sp"
                />

        </LinearLayout>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:maxLines="1"
        android:backgroundTint="#fff"
        android:hint="Enter Question"
        android:textColor="#ffffff"
        android:textColorHint="#fff"
        android:fontFamily="@font/cuprum"
        android:textAppearance="@style/cuprum_reg"
        android:id="@+id/dialog_question_text"
        android:textSize="22sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answers"
            android:textSize="28sp"
            android:fontFamily="@font/cuprumbold"
            android:textAppearance="@style/cuprum_bold"
            android:textColor="#fff"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0sp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/cuprumbold"
                android:textAppearance="@style/cuprum_bold"
                android:background="@drawable/forum_buttons"
                android:text="Add Answer"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:id="@+id/dialog_add_answer"
                android:layout_margin="5sp"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/dialog_answer_panel">




            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>