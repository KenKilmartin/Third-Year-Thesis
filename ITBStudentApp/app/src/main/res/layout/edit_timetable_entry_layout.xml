<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/itb_above1">

    <include
        layout="@layout/toolbar"
        android:id="@+id/tool_bar">
    </include>

    <TextView
        android:textColor="#fff"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/cuprumbold"
        android:textAppearance="@style/cuprum_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Class or Event"
        android:textSize="30dp"/>

    <EditText
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:fontFamily="@font/cuprumbold"
        android:textAppearance="@style/cuprum_bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/classOrEvent"/>

    <TextView
        android:textColor="#fff"
        android:fontFamily="@font/cuprumbold"
        android:textAppearance="@style/cuprum_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Start Time"
        android:textSize="30dp"/>

    <EditText
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:fontFamily="@font/cuprumbold"
        android:textAppearance="@style/cuprum_bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:maxLength="5"
        android:hint="eg 9:30/13:00"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/timetableStartTime"/>

    <TextView
        android:textColor="#fff"
        android:fontFamily="@font/cuprumbold"
        android:textAppearance="@style/cuprum_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="End Time"
        android:textSize="30dp"/>
    <EditText
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:fontFamily="@font/cuprumbold"
        android:textAppearance="@style/cuprum_bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:maxLength="5"
        android:hint="eg 11:30/15:00"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/timetableEndTime"/>

    <TextView
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:fontFamily="@font/cuprumbold"
        android:textAppearance="@style/cuprum_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Room"
        android:textSize="30dp"/>
    <EditText
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:fontFamily="@font/cuprumbold"
        android:textAppearance="@style/cuprum_bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/timetableRoom"/>



    <GridLayout
        android:columnCount="2"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10sp"
        android:weightSum="100"
        android:layout_below="@+id/classOrEvent"
        >

        <Button
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:fontFamily="@font/cuprumbold"
            android:textAppearance="@style/cuprum_bold"
            android:gravity="center"
            android:background="@drawable/forum_panels"
            android:backgroundTint="#cc299308"
            android:textSize="16sp"

            android:text="SAVE"
            android:id="@+id/btnSaveTimetableEntry"/>
        <Button
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:fontFamily="@font/cuprumbold"
            android:textAppearance="@style/cuprum_bold"
            android:gravity="center"
            android:background="@drawable/forum_panels"
            android:backgroundTint="#cc8c010a"
            android:textSize="16sp"
            android:text="DELETE"
            android:id="@+id/btnDeleteTimetableEntry"/>

    </GridLayout>

</LinearLayout>