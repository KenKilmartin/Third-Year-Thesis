<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgotten Password"
            android:textSize="25sp"
            android:textAppearance="@style/cuprum_bold"
            android:fontFamily="@font/cuprumbold"
            android:textAlignment="center"
            android:layout_margin="10sp"
            android:textColor="#ffff"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:inputType="textEmailAddress"
            android:hint="Enter your email address"
            android:textSize="25sp"
            android:fontFamily="@font/cuprumregular"
            android:textAppearance="@style/cuprum_reg"
            android:id="@+id/reset_email"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/cuprumbold"
                android:textAppearance="@style/cuprum_bold"
                android:background="@drawable/forum_buttons"
                android:text="Reset"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:id="@+id/submit_reset"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/cuprumbold"
                android:textAppearance="@style/cuprum_bold"
                android:background="@drawable/forum_buttons"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:id="@+id/dismiss_reset"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>