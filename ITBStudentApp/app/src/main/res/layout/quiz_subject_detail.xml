<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/quiz_detail_panel"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quiz_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="subject name"
                android:layout_marginLeft="5sp"
                android:fontFamily="@font/cuprum"
                android:textAppearance="@style/cuprum_reg"
                android:textSize="25sp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/quiz_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7 quizes availible"
                android:layout_marginLeft="5sp"
                android:fontFamily="@font/cuprum"
                android:textAppearance="@style/cuprum_reg"
                android:textSize="25sp"
                android:textColor="#000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/quiz_add"
                android:padding="4sp"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/plus"
                />

            <ImageView
                android:id="@+id/quiz_edit"
                android:padding="4sp"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/edit"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/title"
        android:background="#000" />
</LinearLayout>
